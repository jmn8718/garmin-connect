{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES5"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
